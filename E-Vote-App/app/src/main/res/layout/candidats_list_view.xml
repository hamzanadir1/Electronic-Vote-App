<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Candidats"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:background="#13b586"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:id="@+id/green_layout"
        >


        <ImageView android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@mipmap/tu"
            android:id="@+id/power_button2"
            />

        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Liste Des Candidats "
            android:textColor="#ffffff"
            android:layout_marginLeft="25dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal|center_vertical"/>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:gravity="right"
            android:orientation="horizontal" >

            <ImageView android:layout_width="55dp"
                android:layout_height="match_parent"
                android:background="@mipmap/power"
                android:id="@+id/power_button"


                />

        </LinearLayout>

    </LinearLayout>



    <ListView
        android:id="@+id/id_candidats_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </ListView>

</LinearLayout>