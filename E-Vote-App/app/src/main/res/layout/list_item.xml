<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants">

    <ImageView
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:id="@+id/list_item_thumbnail"
        android:layout_alignParentTop="true"
        android:background="@mipmap/vote_icon"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="fdffffff:: "
        android:id="@+id/date"
        android:layout_alignBaseline="@+id/d"
        android:textColor="@color/trans_red"
        android:layout_alignBottom="@+id/d"
        android:layout_toRightOf="@+id/d"
        android:layout_toEndOf="@+id/d"
        android:layout_marginLeft="40dp"
        android:textStyle="italic"
        android:layout_marginStart="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is row number 15"
        android:id="@+id/list_item_text"
        android:layout_marginTop="19dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/date"
        android:layout_alignStart="@+id/date" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date de Fin D'election :: "
        android:id="@+id/d"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/list_item_thumbnail"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>