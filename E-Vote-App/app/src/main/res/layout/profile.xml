<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:background="#13b586"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:id="@+id/green_layout"
        >


        <ImageView android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@mipmap/tu"
            android:id="@+id/power_button2"
            />

        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile "
            android:textColor="#ffffff"
            android:layout_marginLeft="130dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal|center_vertical"/>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:gravity="right"
            android:orientation="horizontal" >

            <ImageView android:layout_width="55dp"
                android:layout_height="match_parent"
                android:background="@mipmap/power"
                android:id="@+id/power_button"


                />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/stripey"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="drawable/stripey" />

    <ScrollView
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="4dip"
            >

            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:padding="4dip"
                >

                <TextView
                    android:id="@+id/carrier"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="string/please_describe"
                    android:textColor="#EB1D1D"

                    />

                <TextView
                    android:id="@+id/location_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="string/location_on"
                    android:textColor="#000000"
                    android:padding="3dip"
                    android:gravity="right"
                    android:layout_below="@+id/locationButton"
                    android:layout_alignParentRight="true"

                    />


            </RelativeLayout>

            <TextView
                android:id="@+id/num_des"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Nom Et PrÃ©nom"
                android:textColor="#000000"
                android:padding="3dip"
                />

            <EditText
                android:id="@+id/title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="string/title_ex"
                android:minLines="1"
                ></EditText>

            <TextView
                android:id="@+id/profile_desc"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="CIN"
                android:textColor="#000000"
                android:padding="3dip"
                />

            <EditText
                android:id="@+id/pub_desc"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="string/pub_ex"
                android:minLines="3"
                ></EditText>

            <TextView
                android:id="@+id/num_desc"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="CODE"
                android:textColor="#000000"
                android:padding="3dip"
                />

            <EditText
                android:id="@+id/priv_desc"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="string/priv_ex"
                android:minLines="1"
                ></EditText>

            <Button
                android:id="@+id/thebutton"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="string/upload"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:padding="4dip"
                ></Button>



            <ProgressBar
                android:id="@+id/progressbar"
                android:padding="15dip"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:visibility="gone"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:layout_gravity="center"
                ></ProgressBar>
            <TextView
                android:id="@+id/loadingtext"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text=""
                android:textColor="#000000"
                android:padding="7dip"
                android:gravity="center"
                android:visibility="gone"

                />
        </LinearLayout>
    </ScrollView>

</LinearLayout>